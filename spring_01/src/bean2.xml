<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- 配置属性注入 :使用有参数构造-->
	<bean id="book" class="com.itheima.attr.Book">
	<!-- 体现有参数构造 name:属性名称 value 设置值 -->
	<constructor-arg name="bname" value="活着"></constructor-arg>
	<constructor-arg name="author" value="余华"></constructor-arg>
	</bean>
	<bean id="orsers" class="com.itheima.attr.Orders">
		<property name="oname" value="哈哈"></property>
		<property name="oaddress" value="河北"></property>
	</bean>
